{
    "name": "IAEE",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": [
        "declarativeContent", 
        "storage",
        "tabs",
        "http://*/",
        "https://*/"
    ],
    
    "background": {
        "scripts": ["thirdparty/jquery-3.4.1.js", "background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
          "matches": ["http://*/*","https://*/*"],
          "js": ["thirdparty/jquery-3.4.1.js", "js/cognitive-services-api.js", "payload.js"]
        }
    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
  } 